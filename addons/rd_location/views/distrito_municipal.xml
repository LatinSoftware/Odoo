<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="view_distrito_municipal_tree" model="ir.ui.view">
        <field name="name">Vista de árbol de distritos municipales</field>
        <field name="model">distrito_municipal</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" string="Nombre" />
                <field name="code" string="Código" />
                <field name="country_id" string="País" />
                <field name="provincia_id" string="Provincia" />
                <field name="municipio_id" string="Municipio" />
            </tree>
        </field>
    </record>

    <record id="view_distrito_municipal_form" model="ir.ui.view">
        <field name="name">Vista de formulario de distritos municipales</field>
        <field name="model">distrito_municipal</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" string="Nombre"/>
                        <field name="code" string="Código"/>
                        <field name="country_id" string="País"/>
                        <field name="provincia_id_domain" invisible="1"/>
                        <field name="provincia_id" string="Provincia" domain="provincia_id_domain"/>
                        <field name="municipio_id_domain" invisible="1" />
                        <field name="municipio_id" string="Municipio" domain="municipio_id_domain"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="action_window_distrito_municipal" model="ir.actions.act_window">
        <field name="name">Acción de ventana de distritos municipales</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">distrito_municipal</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_distrito_municipal_tree"/>
    </record>
    
</odoo>