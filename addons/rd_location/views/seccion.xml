<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="view_seccion_tree" model="ir.ui.view">
        <field name="name">Vista de árbol de secciones</field>
        <field name="model">seccion</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" string="Nombre"/>
                <field name="code" string="Código"/>
                <field name="country_id" string="País"/>
                <field name="provincia_id" string="Provincia"/>
                <field name="municipio_id" string="Municipio"/>
            </tree>
        </field>
    </record>

    <record id="view_seccion_form" model="ir.ui.view">
        <field name="name">Vista de formulario de secciones</field>
        <field name="model">seccion</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" string="Nombre"/>
                        <field name="code" string="Código"/>
                        <field name="country_id" string="País"/>
                        <field name="provincia_id_domain" invisible="1"/>
                        <field name="provincia_id" string="Provincia" domain="provincia_id_domain"/>
                        <field name="municipio_id_domain" invisible="1" />
                        <field name="municipio_id" string="Municipio" domain="municipio_id_domain"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_window_seccion" model="ir.actions.act_window">
        <field name="name">Secciones</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">seccion</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_seccion_tree"/>
    </record>
    

</odoo>