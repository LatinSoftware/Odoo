<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- sale.room tree view -->
    <record id="sale_room_view_tree" model="ir.ui.view">
        <field name="name">sale.room.view.tree</field>
        <field name="model">sale.room</field>
        <field name="arch" type="xml">
            <tree>
                <!-- Add your fields here -->
                <field name="code"/>
                <field name="name"/>
            </tree>
        </field>
    </record>
    <!-- model.room action window -->
    <record id="sale_room_action" model="ir.actions.act_window">
        <field name="name">Aulas</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sale.room</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                <!-- Add Text Here -->
                Crear aulas
            </p>
        </field>
    </record>
</odoo>